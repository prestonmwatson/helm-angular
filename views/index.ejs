<!DOCTYPE html>
<html ng-app="helm">
  <head>
    <title>Angular Helm</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
    <script src="/javascripts/app.js" charset="utf-8"></script>
    <script src="/javascripts/ProductsController.js" charset="utf-8"></script>
    <style>
      @media (max-width: 850px) {
        .shop {
          display: none;
        }
      }
      @media (max-width: 977px){
        .grey-bar {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <nav>
        <hr>
        <div class="row">
          <div id="logo" class="col-sm-1">
            <img ui-sref='home' src="/images/logo.png" alt="logo">
          </div>
          <div class="col-sm-10">
            <ul class='shop'>
              <li class='shop'><p ui-sref='shop'>SHOP</p></li>
            </ul>
          </div>
          <div class="col-sm-1">
            <ul class='cart-overview'>
              <li class='cart-summary'><p ui-sref='cart'>Cart: <span ng-bind="{{self.cart.length}}"></span></p></li>
            </ul>
          </div>
        </div>
    </nav>

    <div  ng-controller='ProductsController as products'>
      <ui-view></ui-view>
    </div>

    <footer>
      <hr>
    </footer>
  </body>
</html>
